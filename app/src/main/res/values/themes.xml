<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.LiveStreamingChannelize" parent="Theme.AppCompat.Light"/>

    <style name="ActivityTheme" parent="Theme.AppCompat.Light">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Transparent" parent="android:Theme">
        <item name="android:windowDisablePreview">true</item>
    </style>

    <style name="AppBottomSheetDialogTheme" parent="Theme.MaterialComponents.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CustomBottomSheetStyle</item>
    </style>

    <style name="CustomBottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/upper_rounded_corner_layout</item>
    </style>

    <style name="SwitchTheme" parent="Theme.AppCompat.Light.NoActionBar">
        ...<!-- Active thumb color & Active track color(30% transparency) -->
        <item name="colorControlActivated">@color/btn_bg_blue</item>
        <!-- Inactive thumb color -->
        <item name="colorSwitchThumbNormal">@color/white</item>
        <!-- Inactive track color(30% transparency) -->
        <item name="android:colorForeground">@color/grey</item>...
    </style>

</resources>